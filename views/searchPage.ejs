<div class="author">
    <h1 class="author__heading">Search Results</h1>
</div>
<section class="articles">
    <% if (data.length > 0) { %>     
        <ul class="article-ul"></ul>
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"
                        ><%= post.createdAt.toDateString() %></span
                    >
                </a>
            </li>
        </ul>
        <% }) %> <% } else {%>
            <h3>Cannot find what you want</h3>
        <%} 
    %>
</section>
